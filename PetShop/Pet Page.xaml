        <Label Content="Pet Sex:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="88,488,0,0" VerticalAlignment="Top" Height="34" Width="94" FontSize="24" FontFamily="Britannic Bold"/>
        <Label Content="Pet Pedigree:" HorizontalContentAlignment="Left" HorizontalAlignment="Left" Margin="33,524,0,0" VerticalAlignment="Top" Height="36" Width="153" FontSize="24" FontFamily="Britannic Bold"/>
        <TextBox x:Name="tbPetID" HorizontalAlignment="Left" Height="31" Margin="182,384,0,0" TextWrapping="Wrap" Text="Pet ID g" VerticalAlignment="Top" Width="231" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
        <TextBox x:Name="tbPetName" HorizontalAlignment="Left" Height="31" Margin="182,420,0,0" TextWrapping="Wrap" Text="Name of Pety" VerticalAlignment="Top" Width="231" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
        <TextBox x:Name="tbPetType" HorizontalAlignment="Left" Height="31" Margin="182,458,0,0" TextWrapping="Wrap" Text="Cat or Dog" VerticalAlignment="Top" Width="231" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
        <TextBox x:Name="tbPetSex" HorizontalAlignment="Left" Height="31" Margin="182,494,0,0" TextWrapping="Wrap" Text="Male or Femaley" VerticalAlignment="Top" Width="231" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
        <TextBox x:Name="tbPetPedigree" HorizontalAlignment="Left" Height="31" Margin="182,530,0,0" TextWrapping="Wrap" Text="Pet Breedy" VerticalAlignment="Top" Width="231" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
