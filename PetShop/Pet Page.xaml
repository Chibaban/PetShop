        <TextBox x:Name="tbPetPrice" HorizontalAlignment="Left" Height="31" Margin="562,421,0,0" TextWrapping="Wrap" Text="Pet's Price" VerticalAlignment="Top" Width="214" FontSize="24" FontFamily="Britannic Bold" BorderBrush="Black"/>
